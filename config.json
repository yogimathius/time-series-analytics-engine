{
  "server": {
    "port": ":8080",
    "read_timeout": "30s",
    "write_timeout": "30s",
    "idle_timeout": "120s"
  },
  "storage": {
    "hot": {
      "max_series": 100000,
      "max_points_per_series": 10000,
      "retention_period": "6h",
      "cleanup_interval": "30m"
    },
    "warm": {
      "enabled": true,
      "data_path": "./data/warm",
      "max_file_size_mb": 100,
      "retention_period": "720h",
      "compaction_interval": "6h",
      "compression_level": 6
    },
    "cold": {
      "enabled": false,
      "provider": "filesystem",
      "data_path": "./data/cold",
      "retention_period": "8760h",
      "compression_level": 9
    }
  },
  "ingestion": {
    "buffer_size": 1000,
    "batch_size": 100,
    "flush_interval": "5s",
    "worker_pool_size": 4,
    "validation": {
      "max_value_range": 1000000000000,
      "allowed_metrics": [],
      "required_labels": [],
      "max_label_length": 256,
      "max_metric_name_length": 512,
      "future_timestamp_threshold": "1h",
      "past_timestamp_threshold": "168h"
    }
  },
  "analytics": {
    "anomaly_detection": {
      "enabled": true,
      "default_method": "zscore",
      "window_size": 100,
      "threshold": 3.0,
      "min_data_points": 10,
      "update_interval": "5m"
    },
    "forecasting": {
      "enabled": true,
      "default_method": "linear",
      "default_horizon": "24h"
    }
  }
}